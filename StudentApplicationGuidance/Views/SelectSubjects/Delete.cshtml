@model StudentApplicationGuidance.ModelView.SelectSubjectsView

@{
    ViewBag.Title = "Delete Subject";
}

<h2>Delete Subject</h2>

<h4>Are you sure you want to delete this subject?</h4>
<hr />
<div>
    <h4>Subject</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Subject
        </dt>
        <dd class="col-sm-10">
            @Model.Subject1
        </dd>
        <dt class="col-sm-2">
            Level
        </dt>
        <dd class="col-sm-10">
            @Model.Subject1Level
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
