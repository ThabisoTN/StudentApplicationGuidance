

@section Styles {
    <style>
        .error-popup {
            color: #fff;
            background-color: #dc3545;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
            display: none; /* Hidden by default */
        }
    </style>
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var validationMessage = '@ViewBag.ValidationMessage';
            if (validationMessage) {
                $('#error-popup').text(validationMessage.replace(/\\n/g, '\n')).show();
            }
        });
    </script>
}

<div id="error-popup" class="error-popup"></div>

<form asp-action="Create" method="post">
    @for (int i = 1; i <= 7; i++)
    {
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Subject@(i)" class="form-label">Subject @(i):</label>
                <select id="Subject@(i)" name="Subject@(i)" class="form-select">
                    <option value="">Select Subject</option>
                    @foreach (var subject in ViewBag.Subjects)
                    {
                        <option value="@subject.Id">@subject.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label for="Subject@(i)Level" class="form-label">Level:</label>
                <select id="Subject@(i)Level" name="Subject@(i)Level" class="form-select">
                    @for (int j = 1; j <= 7; j++)
                    {
                        <option value="@j">@j</option>
                    }
                </select>
            </div>
        </div>
    }

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
