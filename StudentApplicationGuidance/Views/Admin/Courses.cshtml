@model IEnumerable<StudentApplicationGuidance.Models.Course>

@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Description</th>
            <th>University</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseName</td>
                <td>@item.Description</td>
                <td>@item.University.UniversityName</td>
                <td>
                    <a asp-action="EditCourse" asp-route-id="@item.CourseId" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteCourse" asp-route-id="@item.CourseId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateCourse" class="btn btn-primary">Create New Course</a>