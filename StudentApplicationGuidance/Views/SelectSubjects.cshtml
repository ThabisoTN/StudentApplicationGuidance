@model StudentApplicationGuidance.ModelView.SelectSubjectsView
@{
    ViewData["Title"] = "Select Subjects";
}

<h1>Select Subjects and Levels</h1>

<form asp-action="SaveSubjects" method="post">
    <div class="form-group">
        <label for="subject1">Subject 1:</label>
        <select id="subject1" name="Subject1" class="form-control">
            <option value="">Select Subject</option>
            @foreach (var subject in ViewBag.Subjects)
            {
                <option value="@subject.Name">@subject.Name</option>
            }
        </select>
        <label for="subject1Level">Level:</label>
        <select id="subject1Level" name="Subject1Level" class="form-control">
            @for (int j = 1; j <= 7; j++)
            {
                <option value="@j">@j</option>
            }
        </select>
    </div>

    <!-- Repeat for Subject 2 to Subject 7 -->
    <div class="form-group">
        <label for="subject2">Subject 2:</label>
        <select id="subject2" name="Subject2" class="form-control">
            <option value="">Select Subject</option>
            @foreach (var subject in ViewBag.Subjects)
            {
                <option value="@subject.Name">@subject.Name</option>
            }
        </select>
        <label for="subject2Level">Level:</label>
        <select id="subject2Level" name="Subject2Level" class="form-control">
            @for (int j = 1; j <= 7; j++)
            {
                <option value="@j">@j</option>
            }
        </select>
    </div>

    <!-- Repeat similar structure for Subject 3 to Subject 7 -->

    <button type="submit" class="btn btn-primary">Save Subjects</button>
</form>
