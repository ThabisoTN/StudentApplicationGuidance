@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="home-container">
        <section class="hero">
            <h1>Welcome to Student Application Guidance</h1>
            <p>Your path to academic success starts here.</p>
            <div class="button-container">
                <a href="@Url.Action("ViewSubjects", "UserSubjects")" class="btn btn-primary btn-lg">Get Started</a>
                <a href="@Url.Action("Index", "Courses")" class="btn btn-secondary btn-lg">View Courses</a>
            </div>
        </section>

        <section class="features">
            <h2>Our Services</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <h3>Course Finder</h3>
                        <p>Easily search and filter courses from various universities.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <h3>Qualification Check</h3>
                        <p>Instantly verify if you meet the requirements for your chosen course.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <h3>University Insights</h3>
                        <p>Get detailed information about universities and their offerings.</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="cta">
            <h2>Ready to find your perfect course?</h2>
            <a href="@Url.Action("Index", "Courses")" class="btn btn-secondary btn-lg">View Courses</a>
        </section>
    </div>
</body>
</html>
