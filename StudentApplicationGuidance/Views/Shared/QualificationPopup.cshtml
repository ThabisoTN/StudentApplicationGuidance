@{
    string qualificationStatus = ViewData["QualificationStatus"]?.ToString();
    string courseName = ViewData["CourseName"]?.ToString();
    string universityName = ViewData["UniversityName"]?.ToString();
}

<div class="modal fade" id="qualificationModal" tabindex="-1" role="dialog" aria-labelledby="qualificationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="qualificationModalLabel">Qualification Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>You @qualificationStatus for @courseName at @universityName.</p>
                <!-- Display specific reason if needed -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Show the qualification modal automatically when the page loads
    $(document).ready(function () {
        $('#qualificationModal').modal('show');
    });
</script>

